<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
<script>
    document.querySelectorAll('.qty-up').forEach(button => {
        button.addEventListener('click', async (event) => {
            const productId = button.getAttribute('data-product-id');
            const quantityElement = document.querySelector(`.qty-val[data-product-id="${productId}"]`);
            const currentQuantity = parseInt(quantityElement.textContent);
            updateQuantity(productId, currentQuantity + 1);
        });
    });

    document.querySelectorAll('.qty-down').forEach(button => {
        button.addEventListener('click', async (event) => {
            const productId = button.getAttribute('data-product-id');
            const quantityElement = document.querySelector(`.qty-val[data-product-id="${productId}"]`);
            const currentQuantity = parseInt(quantityElement.textContent);
            if (currentQuantity > 1) {
                updateQuantity(productId, currentQuantity - 1);
            }
        });
    });

    function updateQuantity(productId, quantity) {
        fetch(`/updateQuantity/${productId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ quantity })
        })
        .then(response => response.json())
        .then(data=> {
            console.log(data);
            // Handle response
            // For example, update the quantity displayed on the page if successful
            if (data.success) {
                // Update quantity displayed on the page
                const quantityElement = document.querySelector(`.qty-val[data-product-id="${productId}"]`);
                quantityElement.textContent = quantity;

                //update subtotal
            const priceElement = document.querySelector(`#prodPrice[data-product-id="${productId}"]`);
            const price = parseFloat(priceElement.textContent.slice(1)); // Extract price from inner text
            console.log(price);
            const subtotalElement = quantityElement.parentElement.parentElement.nextElementSibling; // Get next sibling (subtotal)
            const newSubtotal = price * quantity; // Calculate new subtotal
            console.log(newSubtotal)
            subtotalElement.querySelector('span').textContent = `$${newSubtotal.toFixed(2)}`;
            updateCartTotal(); 
            // Update subtotal text
            }else if (!data.success) {
                const quantityElement = document.querySelector(`.qty-val[data-product-id="${productId}"]`);
                quantityElement.textContent = quantity -1;
        Swal.fire({
          title: "Unavailable",
          text: data.message,
          icon: "warning",
          confirmButtonText: "OK"
        }).then((result) => {
          if (result.isConfirmed) {
            location.reload();
          }
        });
    }   
        
    })
        .catch(error => {
            console.error('Error:', error);
        });
    }


    function updateCartTotal() {
        // Get all subtotal elements
        const subtotalElements = document.querySelectorAll('.text-right[data-title="Subtotal"] span');

        // Calculate total amount
        let subtotal = 0;
        subtotalElements.forEach(subtotalElement => {
            subtotal += parseFloat(subtotalElement.textContent.slice(1)); // Extract and sum subtotals
        });

        // Update cart subtotal
        const cartSubtotalElement = document.querySelector('.cart_total_amount .font-lg');
        cartSubtotalElement.textContent = `$${subtotal.toFixed(2)}`;

        // Update total amount (assuming subtotal is the total for now)
        const totalAmountElement = document.querySelector('.cart_total_amount .font-xl');
        totalAmountElement.textContent = `$${subtotal.toFixed(2)}`;
    }

    // Call the function within a DOMContentLoaded event listener to execute it when the page is loaded
    document.addEventListener('DOMContentLoaded', function() {
        updateCartTotal();
    });


    document.getElementById('checkoutButton').addEventListener('click', function(event) {
        event.preventDefault(); // Prevent default action of anchor tag

        // Call the checkQuantity function
        checkQuantity();
    });


    function checkQuantity() {
        console.log("checkinggg")
        // Perform fetch operation to check quantity
        fetch('/checkQuantity', {
            method: 'POST'
        })
        
        .then(response => {
            if (response.ok) {
                // If response is successful, show SweetAlert with message and redirect to checkout
                response.json().then(data => {
                    if(data.success){
                        window.location.href = '/checkout';

                    }else{
                        Swal.fire({
                        title: "Oops",
                        text: data.message,
                        icon: "warning",
                        showCloseButton: true, // Show close button
                        confirmButtonText: 'Close' // Button text
                    });  
                    }
                   
                });
            } else {
                Swal.fire({
                        title: "Oopss",
                        text: data.message,
                        icon: "warning"
                    })
                // If response is not successful, show error message
                throw new Error('Failed to proceed to checkout');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            Swal.fire({
                title: "Error",
                text: "Failed to proceed to checkout",
                icon: "error"
            });
        });
    }   


function removeSweetAlert(productId){
  console.log(productId);
    Swal.fire({
      title: 'Are you sure?',
      text: 'You will remove this product from your cart!',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#3085d6',
      cancelButtonColor: '#d33',
      confirmButtonText: 'Yes, remove it!'
    }).then((result) => {
      if (result.isConfirmed) {
        const quantityElement = document.querySelector(`.qty-val[data-product-id="${productId}"]`);
        console.log(productId);

        fetch('/removeProduct', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ productId })
        })
        .then(response => response.json())
        .then(data => {
          if (data.success) {
            Swal.fire('Removed!', 'The product has been removed from your cart.', 'success');
            location.reload();
          } else {
            Swal.fire('Error', 'An error occurred while removing the product from your cart.', 'error');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          Swal.fire('Error', 'An error occurred while removing the product from your cart.', 'error');
        });
      }
    });


}


</script> 

