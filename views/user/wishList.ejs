                <span></span> Wishlist
            </div>
        </div>
    </div>
    <section class="mt-50 mb-50">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <div class="table-responsive">
                        <table class="table shopping-summery text-center">
                            <thead>
                                <tr class="main-heading">
                                    <th scope="col" colspan="2">Product</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock Status</th>
                                    <th scope="col">Action</th>
                                    <th scope="col">Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach(product => { %>
                                <tr>
                                    <td class="image product-thumbnail"><img src="/uploads/<%= product.image[0] %>" alt="Product Image"></td>
                                    <td class="product-des product-name">
                                        <h5 class="product-name"><a href="#"><%= product.title %></a></h5>
                                       
                                    </td>
                                    <td class="price" data-title="Price"><span>$<%= product.price.toFixed(2) %></span></td>
                                    <td class="text-center" data-title="Stock">
                                        <% if (product.stock > 0) { %>
                                            <span class="color3 font-weight-bold">In Stock</span>
                                        <% } else { %>
                                            <span class="text-danger font-weight-bold">Out of Stock</span>
                                        <% } %>
                                        <% if (product.stock <= 10) { %>
                                            <br><span class="font-xs" style="color: red;">Only <%= product.stock %> left</span>
                                        <% } %>
                                    </td>
                                    <td class="text-right" data-title="Cart">
                                        <% if (product.stock > 0) { %>
                                        <button class="btn btn-sm" onclick="addToCart('<%=user._id %>','<%=product._id %>')"  style="background-color: #FF6B6B; border-color:  #FF6B6B;"><i class="fi-rs-shopping-bag mr-5"></i>Add to cart</button>
                                        <% } else { %>
                                            <button class="btn btn-sm btn-secondary"><i class="fi-rs-headset mr-5"></i>Contact Us</button>
                                            <% } %>

                                    </td>
                                    <td class="action" data-title="Remove">
                                        <a  onclick="removeProduct('<%=product._id%>')"  style="color: #FF6B6B;"><i class="fi-rs-trash"></i></a>
                                    </td>
                                </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>
