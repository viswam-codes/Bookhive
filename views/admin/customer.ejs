<script>
    function confirmBlock(userId) {
        console.log(userId,"user id ");
       const button=document.getElementById(`status_${userId}`)
       const buttonText= button.innerText.trim();
       let title,text;

       if(buttonText==='Active'){
        title='Are you sure?';
        text='Are you sure you want to block this user?';
       }else if (buttonText === 'Blocked'){
        title='Are you sure?';
        text='Are you sure you want to unblock this user?';
       }
       console.log(buttonText,"button text")
        Swal.fire({
            title: title,
            text: text,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Confirm',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                blockUser(userId);
                
            }
        });
    }
    
    function blockUser(userId) {
        // Send a request to block the user
        console.log(userId,"jskjf")
        fetch(`/admin/user_management/${userId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Display success message
                Swal.fire('Success', 'Operation successfully', 'success');
                location.reload();
                updateButtonAndStatus(userId,data.is_verified);
                  
            } else {
                // Display error message
                Swal.fire('Error', 'Failed to block user', 'error');
            }
        })
        .catch(error => {
            console.error('Error blocking user:', error);
            // Display error message
            Swal.fire('Error', 'Failed to block user', 'error');
        });
    }

  function updateButtonAndStatus(userId,isVerified){
    console.log(isVerified);
    const button=document.querySelector(`.custom-btn[data-user-id="${userId}"]`)
    const statusSpan=document.getElementById(`status_${userId}`)

    if(button && statusSpan){
        if(isVerified){
            button.innerText='Block';
            button.classList.remove('btn-warning');
            button.classList.add('custom-btn');
            statusSpan.textContent='Active';
            statusSpan.classList.remove('bg-danger');
            statusSpan.classList.add('bg-success');
        }else{
            button.innerText='Unblock';
            button.classList.remove('custom-btn');
            button.classList.add('btn-warning');
            statusSpan.textContent = 'Blocked';
            statusSpan.classList.remove('bg-success');
            statusSpan.classList.add('bg-danger');
            
        }
    }
  }


 


    </script>

<script>
    const newUserInput = document.getElementById('newUser');
    const userInput = document.getElementById('user');
    const errorMessageNew = document.getElementById('errorMessageNew');
    const errorMessageUser = document.getElementById('errorMessageUser');

    function validateInput(input, errorMessageElement) {
        const value = input.value;
        errorMessageElement.innerHTML = '';

        if (!value || value <= 0) {
            errorMessageElement.innerText = 'Amount is required and should be greater than 0.';
            return false;
        }

        return true;
    }

    newUserInput.addEventListener('keyup', () => validateInput(newUserInput, errorMessageNew));
    userInput.addEventListener('keyup', () => validateInput(userInput, errorMessageUser));

    document.getElementById('referralForm').addEventListener('submit', function(e) {
        e.preventDefault();

        const isValidNewUser = validateInput(newUserInput, errorMessageNew);
        const isValidUser = validateInput(userInput, errorMessageUser);

        if (!isValidNewUser || !isValidUser) {
            return;
        }

        // Send the values to the backend
        fetch('/admin/setReferralAmounts', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                newUserAmount: parseFloat(newUserInput.value),
                userAmount: parseFloat(userInput.value)
            })
        }).then(response => {
            if (response.ok) {
                // Show a success message
                errorMessageUser.classList.remove('text-danger');
                errorMessageUser.classList.add('text-success');
                errorMessageUser.innerHTML = 'Referral amounts saved successfully!';

                // Hide the modal after a short delay
                setTimeout(() => {
                    $('#referralModal').modal('hide');
                    // Clear the form inputs
                    newUserInput.value = '';
                    userInput.value = '';
                    // Clear the success message
                    errorMessageUser.innerHTML = '';
                }, 1000);
            } else {
                errorMessageUser.classList.remove('text-success');
                errorMessageUser.classList.add('text-danger');
                errorMessageUser.innerHTML = 'Failed to save referral amounts.';
            }
        }).catch(error => {
            console.error('Error:', error);
            errorMessageUser.classList.remove('text-success');
            errorMessageUser.classList.add('text-danger');
            errorMessageUser.innerHTML = 'Error saving referral amounts.';
        });
    });
</script>

