<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    function confirmBlock(userId) {
        console.log(userId,"user id ");
       const button=document.getElementById(`status_${userId}`)
       const buttonText= button.innerText.trim();
       let title,text;

       if(buttonText==='Active'){
        title='Are you sure?';
        text='Are you sure you want to block this user?';
       }else if (buttonText === 'Blocked'){
        title='Are you sure?';
        text='Are you sure you want to unblock this user?';
       }
       console.log(buttonText,"button text")
        Swal.fire({
            title: title,
            text: text,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Confirm',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                blockUser(userId);
                
            }
        });
    }
    
    function blockUser(userId) {
        // Send a request to block the user
        console.log(userId,"jskjf")
        fetch(`/admin/user_management/${userId}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Display success message
                Swal.fire('Success', 'Operation successfully', 'success');
                location.reload();
                updateButtonAndStatus(userId,data.is_verified);
                  
            } else {
                // Display error message
                Swal.fire('Error', 'Failed to block user', 'error');
            }
        })
        .catch(error => {
            console.error('Error blocking user:', error);
            // Display error message
            Swal.fire('Error', 'Failed to block user', 'error');
        });
    }

  function updateButtonAndStatus(userId,isVerified){
    console.log(isVerified);
    const button=document.querySelector(`.custom-btn[data-user-id="${userId}"]`)
    const statusSpan=document.getElementById(`status_${userId}`)

    if(button && statusSpan){
        if(isVerified){
            button.innerText='Block';
            button.classList.remove('btn-warning');
            button.classList.add('custom-btn');
            statusSpan.textContent='Active';
            statusSpan.classList.remove('bg-danger');
            statusSpan.classList.add('bg-success');
        }else{
            button.innerText='Unblock';
            button.classList.remove('custom-btn');
            button.classList.add('btn-warning');
            statusSpan.textContent = 'Blocked';
            statusSpan.classList.remove('bg-success');
            statusSpan.classList.add('bg-danger');
            
        }
    }
  }

    </script>
