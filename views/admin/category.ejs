// Function to handle saving changes in the modal
function saveChanges() {
    const categoryId= $('#editCategoryModal #categoryIdInput').val();
    const categoryName = $('#editCategoryName').val();
    const isListed = $('input[name="listStatus"]:checked').val();

    // Fetch operation to send updated category information to the backend
    fetch(`/admin/category_management/${categoryId}`, {
        method: 'PUT',
        headers: {
            'Content-Type': 'application/json',
        },
        body: JSON.stringify({ name: categoryName, isListed }),
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            // Update the UI with the new category information
            // You can update the UI here according to your requirement
            // For example, update the table row with the updated category details
            // Reload the page or update the UI without reloading
        } else {
            console.error('Failed to update category:', data.message);
            // Handle error scenario
        }
    })
    .catch(error => {
        console.error('Error updating category:', error);
        // Handle error scenario
    });
}

// Attach click event listener to Save Changes button in the modal
$('#saveChangesBtn').click(function() {
    saveChanges();
});
 

    </script>
