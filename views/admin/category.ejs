    <script>
        function showEditModal(categoryId) {
        $('#editCategoryModal #categoryIdInput').val(categoryId);   
        $('#editCategoryModal').modal('show');
    }

    // Attach click event listener to all Edit buttons
    $('.edit-category-btn').click(function() {
        // Show the modal when an Edit button is clicked
        showEditModal(categoryId);
    });

